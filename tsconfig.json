{
    "compilerOptions": {
        "alwaysStrict": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "inlineSourceMap": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es2017",
            "esnext",
            "esnext.asynciterable"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "noUnusedLocals": true,
        "outDir": "dist",
        "removeComments": false,
        "target": "es2017",
        "strict": true
    },
    "exclude": [
        "dist",
        "node_modules",
        "packages"
    ],
    "include": [
        "@types/**/*.ts",
        "release/**/*.ts",
        "scripts/**/*.ts"
    ],
    "references": [

        { "path": "packages/hint" },
        { "path": "packages/hint-amp-validator" },
        { "path": "packages/hint-apple-touch-icons" },
        { "path": "packages/hint-axe" },
        { "path": "packages/hint-babel-config" },
        { "path": "packages/hint-button-type" },
        { "path": "packages/hint-compat-api" },
        { "path": "packages/hint-content-type" },
        { "path": "packages/hint-create-element-svg" },
        { "path": "packages/hint-css-prefix-order" },
        { "path": "packages/hint-disown-opener" },
        { "path": "packages/hint-doctype" },
        { "path": "packages/hint-highest-available-document-mode" },
        { "path": "packages/hint-html-checker" },
        { "path": "packages/hint-http-cache" }
    ]
}
